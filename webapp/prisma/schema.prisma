generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Run {
  id             Int        @id @default(autoincrement())
  runId          String     @unique
  name           String
  runName        String
  type           String
  flags          String
  note           String     @default("")
  status         String     @default("queued")
  lastStep       String     @default("")
  createdAt      DateTime   @default(now())
  startedAt      DateTime?
  finishedAt     DateTime?
  error          String?
  uploadPath     String
  datasetDownload String?
  loraDownload    String?
}

model AutoCharPreset {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  description   String   @default("")
  blockPatterns String   // JSON stringified array or newline-delimited patterns
  allowPatterns String   // JSON stringified array or newline-delimited patterns
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
