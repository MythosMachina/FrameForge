generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Run {
  id             Int        @id @default(autoincrement())
  runId          String     @unique
  name           String
  runName        String
  type           String
  flags          String
  note           String     @default("")
  status         String     @default("queued")
  lastStep       String     @default("")
  createdAt      DateTime   @default(now())
  startedAt      DateTime?
  finishedAt     DateTime?
  error          String?
  uploadPath     String
  datasetDownload String?
  loraDownload    String?
}

model AutoCharPreset {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  description   String   @default("")
  blockPatterns String   // JSON stringified array or newline-delimited patterns
  allowPatterns String   // JSON stringified array or newline-delimited patterns
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Setting {
  key        String   @id
  value      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TaggerModel {
  id         Int      @id @default(autoincrement())
  repoId     String   @unique
  name       String
  folder     String
  size       Int      @default(0)
  status     String   @default("ready")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model StagedUpload {
  id           Int      @id @default(autoincrement())
  uploadId     String   @unique
  originalName String
  storedName   String
  size         Int
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}
